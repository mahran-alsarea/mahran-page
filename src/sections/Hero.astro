---
import { Picture } from "astro:assets";
import hero1 from "../assets/hero1.jpeg";
//@ts-expect-error
import img1Lqip from "../assets/hero1.jpeg?lqip";
---

<header class="bleed">
  <div class="image-wrapper">
    <Picture
      formats={["avif", "webp"]}
      src={hero1}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img1Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
    />
  </div>
  <div class="text-container">
    <h1>السرعة و الأمان في نقل الأثاث</h1>
    <p>نجعل نقل الأثاث تجربه سلسة و خالية من المتاعب</p>
    <a href="#contactus" class="cta">إبدأ معنا الأن</a>
  </div>
</header>
<style>
  header {
    position: relative;
    height: 100dvh;
  }
  .text-container {
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-secondary-light, #fff);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .text-container h1 {
    font-style: normal;
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: normal;
    animation: top 1.5s ease 0s 1 normal forwards;
  }
  @keyframes top {
    0% {
      opacity: 0;
      transform: translateY(-150px);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-container p {
    color: var(--text-secondary-light, #fff);
    text-align: center;
    font-family: Cairo;
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    animation: bottom 1.5s ease 0s 1 normal forwards;
  }
  @keyframes bottom {
    0% {
      opacity: 0;
      transform: translateY(150px);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .text-container a {
    color: white;
    text-decoration: none;
    border-radius: var(--borderRadius-sm, 8px);
    background: var(--bg-primary-accent-heavy, #f9710d);
    box-shadow: 0px 5px 30px 0px rgba(137, 153, 163, 0.24);
    display: inline-flex;
    height: 48px;
    padding: 2rem;
    align-self: center;
    justify-content: center;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
    animation: zoom 0.5s ease 2s 1 normal backwards;
  }
  a.cta:hover {
    transform: scale(1.15);
    background: var(--bg-secondary-accent-heavy, #006ba6);
  }
  @media screen and (max-width: var(--sm)) {
    .text-container {
      white-space: normal;
    }
  }
  @keyframes zoom {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(1);
    }
  }
  picture,
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    background-color: lightgray;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .image-wrapper {
    position: relative;
    display: block;
    height: 100%;
    overflow: hidden;
  }

  .image-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--neutral-N900, #212529);
    opacity: 0.6;
    mix-blend-mode: multiply;
  }
</style>
