---
import { Picture } from "astro:assets";
import hero1 from "../assets/hero1d.png";
//@ts-expect-error
import img1Lqip from "../assets/hero1d.png?lqip";
import hero2 from "../assets/hero2d.png";
//@ts-expect-error
import img2Lqip from "../assets/hero2d.png?lqip";
import hero3 from "../assets/hero3d.png";
//@ts-expect-error
import img3Lqip from "../assets/hero3d.png?lqip";
const lqipUrl = `url(${img2Lqip.lqip})`;
---

<header class="bleed animated">
  <div class="image-wrapper">
    <Picture
      formats={["avif", "webp"]}
      src={hero1}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img1Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="animated"
    />
    <Picture
      formats={["avif", "webp"]}
      src={hero2}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img2Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="animated"
    />
    <Picture
      formats={["avif", "webp"]}
      src={hero3}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img3Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="animated"
    />
  </div>
  <div class="text-container">
    <h1 class="sr-only">السرعة و الأمان في نقل الأثاث</h1>
    <p class="sr-only">نجعل نقل الأثاث تجربه سلسة و خالية من المتاعب</p>
    <div class="first" aria-hidden="true"></div>
    <div class="second" aria-hidden="true"></div>
    <a href="#contactus" class="cta">إبدأ معنا الأن</a>
  </div>
</header>
<script>
  const element = document.querySelector("header.animated");
  setInterval(() => {
    element?.classList.toggle("animated");
    setTimeout(() => element?.classList.toggle("animated"), 100);
  }, 15000);
</script>
<style define:vars={{ lqipUrl }}>
  header {
    position: relative;
    height: 100vh;
    background-image: var(--lqipUrl);
    background-repeat: no-repeat;
    background-size: cover;
  }
  .sr-only {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
  .text-container {
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-secondary-light, #fff);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .text-container h1,
  .first {
    font-style: normal;
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: normal;
  }

  p.main,
  .second {
    color: var(--text-secondary-light, #fff);
    text-align: center;
    font-family: Cairo;
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .text-container a {
    color: white;
    text-decoration: none;
    border-radius: var(--borderRadius-sm, 8px);
    background: var(--bg-primary-accent-heavy, #f9710d);
    box-shadow: 0px 5px 30px 0px rgba(137, 153, 163, 0.24);
    display: inline-flex;
    height: 48px;
    padding: 2rem;
    align-self: center;
    justify-content: center;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
    animation: zoom 0.5s ease 2s 1 normal backwards;
  }
  a.cta:hover {
    transform: scale(1.15);
    background: var(--bg-secondary-accent-heavy, #006ba6);
  }
  @media screen and (max-width: var(--sm)) {
    .text-container {
      white-space: normal;
    }
  }
  @keyframes zoom {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(1);
    }
  }
  picture,
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    position: absolute;
    background-image: var(--lqipUrl);
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 0;
  }
  .image-wrapper {
    position: relative;
    display: block;
    height: 100%;
    overflow: hidden;
  }

  header.animated picture,
  header.animated img {
    animation: change-img-anim 15s infinite forwards;
  }
  .image-wrapper picture:nth-of-type(1) {
    animation-delay: 0s;
  }
  .image-wrapper picture:nth-of-type(2) {
    animation-delay: 5s;
  }
  .image-wrapper picture:nth-of-type(3) {
    animation-delay: 10s;
  }

  @keyframes change-img-anim {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  .first,
  .second {
    visibility: hidden;
    text-align: center;
  }
  .first:after {
    visibility: visible;
    content: "";
    animation: top 15s linear infinite forwards;
    display: inline-block;
  }
  .second::before {
    visibility: visible;
    content: "";
    animation: bottom 15s linear infinite forwards;
    display: inline-block;
  }
  @keyframes top {
    /* 0 */
    0% {
      opacity: 0;
      transform: translateY(-150px);
      content: "السرعة و الأمان في نقل الأثاث";
    }
    9% {
      transform: translate(0px, 0);
      content: "السرعة و الأمان في نقل الأثاث";
      opacity: 1;
    }
    22% {
      transform: translate(0px, 0);
    }
    /* 5 */
    33% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    40% {
      opacity: 0;
      transform: translateX(200px);
    }
    55% {
      opacity: 1;
      transform: translate(0px, 0);
      content: "نقل الأثاث بأسلوب آمن وفعال";
    }
    /* 10 */
    66% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    77% {
      opacity: 0;
      /* transform: rotateY(20deg) rotateX(35deg) translate(200px, -200px); */
      transform: translate(200px, -200px);
    }
    80% {
      opacity: 1;
      transform: rotateY(0) rotateX(0deg) translate(0, 0) skew(0deg, 0deg);
      content: " تحرك بأمان، تصل بسرعة";
    }
    100% {
      opacity: 1;
      content: " تحرك بأمان، تصل بسرعة";
    }
  }
  @keyframes bottom {
    /* 0 */
    0% {
      opacity: 0;
      transform: translateY(150px);
      content: "نجعل نقل الأثاث تجربة سلسة وخالية من المتاعب";
    }
    9% {
      transform: translate(0px, 0);
      content: "نجعل نقل الأثاث تجربة سلسة وخالية من المتاعب";
      opacity: 1;
    }
    22% {
      transform: translate(0px, 0);
    }
    /* 5 */
    33% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    40% {
      opacity: 0;
      transform: translateX(-200px);
    }
    55% {
      opacity: 1;
      transform: translate(0px, 0);
      content: "خبراء في النقل السريع والآمن لكل احتياجاتك";
    }
    /* 10 */
    66% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    77% {
      opacity: 0;
      /* transform: rotateY(20deg) rotateX(35deg) translate(200px, -200px) skew(-35deg, 10deg); */
      transform: translate(200px, -200px);
    }
    80% {
      opacity: 1;
      transform: rotateY(0) rotateX(0deg) translate(0, 0) skew(0deg, 0deg);
      content: "خدمات نقل الأثاث التي يمكنك الوثوق بها";
    }
    100% {
      opacity: 1;
      content: "خدمات نقل الأثاث التي يمكنك الوثوق بها";
    }
  }
  @-webkit-keyframes tilt-in-fwd-tr {
    0% {
      -webkit-transform: rotateY(20deg) rotateX(35deg) translate(300px, -300px)
        skew(-35deg, 10deg);
      transform: rotateY(20deg) rotateX(35deg) translate(300px, -300px)
        skew(-35deg, 10deg);
      opacity: 0;
    }
    100% {
      -webkit-transform: rotateY(0) rotateX(0deg) translate(0, 0)
        skew(0deg, 0deg);
      transform: rotateY(0) rotateX(0deg) translate(0, 0) skew(0deg, 0deg);
      opacity: 1;
    }
  }
  @keyframes tilt-in-fwd-tr {
    0% {
      -webkit-transform: rotateY(20deg) rotateX(35deg) translate(300px, -300px)
        skew(-35deg, 10deg);
      transform: rotateY(20deg) rotateX(35deg) translate(300px, -300px)
        skew(-35deg, 10deg);
      opacity: 0;
    }
    100% {
      -webkit-transform: rotateY(0) rotateX(0deg) translate(0, 0)
        skew(0deg, 0deg);
      transform: rotateY(0) rotateX(0deg) translate(0, 0) skew(0deg, 0deg);
      opacity: 1;
    }
  }
</style>
