---
import { Picture } from "astro:assets";
import hero1 from "../assets/hero1d.png";
//@ts-expect-error
import img1Lqip from "../assets/hero1d.png?lqip";
import hero2 from "../assets/hero2d.png";
//@ts-expect-error
import img2Lqip from "../assets/hero2d.png?lqip";
const lqipUrl = `url(${img2Lqip.lqip})`;
---

<header class="bleed">
  <div class="image-wrapper">
    <Picture
      formats={["avif", "webp"]}
      src={hero1}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img1Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="image"
    />
    <Picture
      formats={["avif", "webp"]}
      src={hero2}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img2Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="image"
    />
    <Picture
      formats={["avif", "webp"]}
      src={hero1}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img1Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
      class="image"
    />
  </div>
  <div class="text-container">
    <h1 class="sr-only">السرعة و الأمان في نقل الأثاث</h1>
    <p class="sr-only">نجعل نقل الأثاث تجربه سلسة و خالية من المتاعب</p>
    <div class="first" aria-hidden="true"></div>
    <div class="second" aria-hidden="true"></div>
    <a href="#contactus" class="cta">إبدأ معنا الأن</a>
  </div>
</header>
<style define:vars={{ lqipUrl }}>
  header {
    position: relative;
    height: 100vh;
  }
  .sr-only {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
  .text-container {
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-secondary-light, #fff);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .text-container h1,
  .first {
    font-style: normal;
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: normal;
  }

  p.main,
  .second {
    color: var(--text-secondary-light, #fff);
    text-align: center;
    font-family: Cairo;
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .text-container a {
    color: white;
    text-decoration: none;
    border-radius: var(--borderRadius-sm, 8px);
    background: var(--bg-primary-accent-heavy, #f9710d);
    box-shadow: 0px 5px 30px 0px rgba(137, 153, 163, 0.24);
    display: inline-flex;
    height: 48px;
    padding: 2rem;
    align-self: center;
    justify-content: center;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
    animation: zoom 0.5s ease 2s 1 normal backwards;
  }
  a.cta:hover {
    transform: scale(1.15);
    background: var(--bg-secondary-accent-heavy, #006ba6);
  }
  @media screen and (max-width: var(--sm)) {
    .text-container {
      white-space: normal;
    }
  }
  @keyframes zoom {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(1);
    }
  }
  picture,
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    position: absolute;
    background-image: var(--lqipUrl);
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 0;
    animation: change-img-anim 30s infinite;
  }
  .image-wrapper {
    position: relative;
    display: block;
    height: 100%;
    overflow: hidden;
  }

  picture:nth-of-type(1) {
    animation-delay: 0s;
  }
  picture:nth-of-type(2) {
    animation-delay: 10s;
  }
  picture:nth-of-type(3) {
    animation-delay: 20s;
  }

  @keyframes change-img-anim {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  .first,
  .second {
    visibility: hidden;
    text-align: center;
  }
  .first:after {
    visibility: visible;
    content: "";
    animation: top 10s linear forwards;
    display: inline-block;
  }
  .second::before {
    visibility: visible;
    content: "";
    animation: bottom 10s linear forwards;
    display: inline-block;
  }
  @keyframes top {
    0% {
      opacity: 0;
      transform: translateY(-150px);
      content: "السرعة و الأمان في نقل الأثاث";
    }
    30% {
      transform: translate(0px, 0);
      content: "السرعة و الأمان في نقل الأثاث";
      opacity: 1;
    }
    50% {
      transform: translate(0px, 0);
    }
    60% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    70% {
      opacity: 0;
      transform: translateX(200px);
    }
    100% {
      opacity: 1;
      transform: translate(0px, 0);
      content: "نقل الإثاث بإسلوب أمن و فعال";
    }
  }
  @keyframes bottom {
    0% {
      opacity: 0;
      transform: translateY(150px);
      content: "نجعل نقل الأثاث تجربه سلسة و خالية من المتاعب";
    }
    30% {
      transform: translate(0px, 0);
      content: "نجعل نقل الأثاث تجربه سلسة و خالية من المتاعب";
      opacity: 1;
    }
    50% {
      transform: translate(0px, 0);
    }
    60% {
      transform: translate(0px, 0);
      opacity: 0;
    }
    70% {
      opacity: 0;
      transform: translateX(-200px);
    }
    100% {
      opacity: 1;
      transform: translate(0px, 0);
      content: "خدمات نقل الأثاث التي يمكنن الوثوق بها";
    }
  }
