---
import { Picture } from "astro:assets";
import hero1 from "../assets/blogHerod.png";
//@ts-expect-error
import img1Lqip from "../assets/blogHerod.png?lqip";
const lqipUrl = `url(${img1Lqip.lqip})`;
---

<header class="bleed animated">
  <div class="image-wrapper">
    <Picture
      formats={["avif", "webp"]}
      src={hero1}
      loading="eager"
      alt="image for speedstart employe moving boxes"
      style={{
        backgroundImage: `url("${img1Lqip.lqip}")`,

        backgroundSize: "cover",
      }}
    />
  </div>
  <div class="text-container">
    <h1>المدونه</h1>
  </div>
</header>
<style define:vars={{ lqipUrl }}>
  header {
    position: relative;
    height: 45vh;
    background-image: var(--lqipUrl);
    padding-block-start: 2rem;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .text-container {
    padding-block-start: 3rem;
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-secondary-light, #fff);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .text-container h1 {
    font-style: normal;
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: normal;
  }

  picture,
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    position: absolute;
    background-image: var(--lqipUrl);
    background-repeat: no-repeat;
    background-size: cover;
  }
  .image-wrapper {
    position: relative;
    display: block;
    height: 100%;
    overflow: hidden;
  }
  .image-wrapper:before { 
    content: ""; 
    position: absolute; 
    top: 0; 
    left: 0; 
    right: 0; 
    bottom: 0; 
    background-color: var(--neutral-N900, #212529)
    opacity: 0.6;
    mix-blend-mode: multiply;
  } </style>
