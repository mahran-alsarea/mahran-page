---
import { Image } from "astro:assets";
const data = await Astro.glob("../data.md");
const { formLink, waNum } = data[0].frontmatter.contact;
---

<section id="contactus">
  <Image src={import("../assets/contactus.png")} alt="worker" />
  <div class="wrapper">
    <h2>هل لديك خطه للنقل ؟</h2>
    <p>نحن هنا لمساعدتك</p>
    <form id="contact_form" data-formLink={formLink + waNum}>
      <label
        >الإسم
        <input
          id="name"
          name="name"
          type="text"
          placeholder="محمد عبدالحميد جمعة السيد"
          required
        />
      </label>

      <label
        >رقم الهاتف
        <input
          id="phone"
          name="phone"
          type="text"
          placeholder="+966 77 899 0988"
        />
      </label>

      <label
        >البريد الإلكتروني
        <input
          id="email"
          name="email"
          type="email"
          placeholder="bo-saad@mail.com"
        />
      </label>

      <label
        >الرسالة
        <textarea
          rows="5"
          id="message"
          name="message"
          required
          placeholder="لدي عملية نقل و أود معرفة ......."></textarea>
      </label>

      <input type="submit" value="إرسال" />
    </form>
  </div>
</section>
<script>
  document
    .getElementById("contact_form")
    ?.addEventListener("submit", function (event) {
      event.preventDefault();
      //@ts-expect-error
      const formData = new FormData(this);
      let url =
        //@ts-expect-error
        `${event.target.dataset.formlink}?text=` +
        formData.get("message") +
        "%0a" +
        "%0a" +
        formData.get("name") +
        "%0a" +
        formData.get("email");
      "%0a" + formData.get("phone");
      window?.open(url, "_blank")?.focus();
    });
</script>
<style>
  section {
    display: flex;
    flex-direction: row-reverse;
    max-width: var(--container-width);
    padding: var(--container-inline);
    margin-inline: auto;
  }
  @media (max-width: 720px) {
    section {
      flex-direction: column;
    }
  }

  @media (min-width: 720px) {
    section {
      grid-template-columns: repeat(3, 1fr); /* 3 columns for larger screens */
    }
  }
  .wrapper {
    width: 100%;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    align-self: center;
  }
  form {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    border-radius: 20px;
    box-shadow: 0px 5px 30px 0px rgba(0, 107, 166, 0.1);
    display: flex;
    padding: 2rem;
    align-items: stretch;
    gap: 1.5rem;
  }
  h2 {
    color: var(--text-primary-heavy, #212529);
    text-align: center;
    font-family: Cairo;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: 72px; /* 150% */
  }
  h2 + p {
    color: var(--text-secondary-accent-heavy, #006ba6);
    text-align: center;
    font-size: 1rem;
    font-weight: 700;
    line-height: 72px; /* 450% */
  }
  label {
    display: flex;
    flex-direction: column;
    gap: 4px;
    color: var(--text-primary-medium, #495057);
    text-align: right;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 21px; /* 150% */
  }
  input,
  textarea {
    border-radius: var(--borderRadius-sm, 8px);
    border: 1px solid var(--border-primary-heavy, #dee2e6);
    background: var(--bg-primary-light, #fff);
    display: flex;
    padding: 15px 16px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: var(--space-sm, 8px);
    align-self: stretch;
  }
  input[type="submit"] {
    border-radius: var(--borderRadius-xs, 5px);
    background: var(--bg-primary-accent-heavy, #f9710d);
    box-shadow: 0px 5px 30px 0px rgba(137, 153, 163, 0.24);
    color: white;
    text-align: center;
  }

  input[type="submit"]:hover {
    transform: scale(1.005);
    color: var(--text-primary-medium, #495057);
  }
  input::placeholder,
  textarea::placeholder {
    color: var(--text-primary-light, #6c757d);
    text-align: right;
    font-size: 1rem;
    font-weight: 400;
    line-height: 21px; /* 150% */
  }
  input:focus::placeholder,
  textarea:focus::placeholder {
    color: white;
  }
</style>
