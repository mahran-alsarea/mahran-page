---
import MainLayout from "../layouts/MainLayout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../sections/Hero.astro";
import About from "../sections/About.astro";
import Services from "../sections/Services.astro";
import Testmonials from "../sections/Testmonials.astro";
import ContactUs from "../sections/ContactUs.astro";
import Footer from "../sections/Footer.astro";
import Wa from "../components/Wa.astro";
---

<MainLayout
  title="سبيد ستار … افضل شركة شحن في جده"
  disc="سبيد ستار … افضل شركة شحن في جده "
  lang="ar"
>
  <Hero />
  <Nav />
  <About />
  <Services />
  <Testmonials />
  <ContactUs />
  <Footer />
  <Wa />
</MainLayout>
<style is:global>
  :root {
    --container-width: 1240px;
    --container-inline: 1.5rem;
  }
  html,
  body {
    font-family: Cairo;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }
  body {
    position: relative;
  }

  *,
  *:before,
  *:after {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
</style>
